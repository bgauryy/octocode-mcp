{
  "name": "octocode-research",
  "version": "2.0.0",
  "type": "module",
  "description": "Code research server using octocode tools - HTTP API on port 1987",
  "author": "Guy Bary <bgauryy@octocodeai.com>",
  "homepage": "https://octocode.ai",
  "repository": "bgauryy/octocode-mcp.git",
  "bugs": "https://github.com/bgauryy/octocode-mcp/issues",
  "license": "PolyForm-Small-Business-1.0.0",
  "keywords": [
    "agent-skill",
    "code-research",
    "http-server",
    "octocode",
    "mcp"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "octocode-research": "./dist/server.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    }
  },
  "files": [
    "dist",
    "src",
    "install.sh",
    "start.sh",
    "SKILL.md",
    "LICENSE",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "dependencies": {
    "express": "^4.21.2",
    "octocode-mcp": "^11.1.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.15.29",
    "eslint": "^9.27.0",
    "typescript-eslint": "^8.32.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
