{
  "name": "octocode-shared",
  "version": "1.0.0",
  "description": "Shared utilities for Octocode packages - credential management and platform detection",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./credentials": {
      "types": "./dist/credentials/index.d.ts",
      "import": "./dist/credentials/index.js"
    },
    "./platform": {
      "types": "./dist/platform/index.d.ts",
      "import": "./dist/platform/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "yarn lint && tsc",
    "build:dev": "tsc",
    "clean": "rm -rf dist/",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "test": "vitest run --coverage",
    "test:quiet": "vitest run --reporter=dot --silent",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "octocode",
    "shared",
    "credentials",
    "token-storage",
    "platform"
  ],
  "author": "Guy Bary <bgauryy@octocodeai.com>",
  "homepage": "https://octocode.ai",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bgauryy/octocode-mcp.git",
    "directory": "packages/octocode-shared"
  },
  "bugs": "https://github.com/bgauryy/octocode-mcp/issues",
  "license": "PolyForm-Small-Business-1.0.0",
  "dependencies": {
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitest/coverage-v8": "^4.0.13",
    "eslint": "^8.57.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
