{
  "description": "Octocode-Vibe Plugin Hooks - Automated state management and workflow enhancement",
  "hooks": {
    "PostToolUse": [
      {
        "description": "Checkpoint state after Write operations to ensure recoverability",
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/checkpoint-state.sh",
            "timeout": 5
          }
        ]
      },
      {
        "description": "Log agent decisions after TodoWrite to track progress",
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/log-progress.sh",
            "timeout": 3
          }
        ]
      },
      {
        "description": "Validate critical files after editing agent or command definitions",
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/validate-changes.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "description": "Check for existing .octocode state and offer recovery",
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/session-start.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "description": "Create final checkpoint and cleanup temporary files",
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/session-end.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "description": "Detect octocode-generate command and ensure proper initialization",
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/prompt-submit.sh",
            "timeout": 3
          }
        ]
      }
    ]
  }
}
